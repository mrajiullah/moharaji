---
const {
  name,
  titleLine,
  tags = [],
  actions = [],
} = Astro.props;
---
<section class="card section" style="padding: 1.5rem;">
  <div style="display:flex; flex-direction:column; gap: 1rem;">
    <div>
      <h1>{name}</h1>
      <p style="font-size:1.05rem; margin-top:.5rem;">{titleLine}</p>
    </div>

    <div style="display:flex; flex-wrap:wrap; gap:.5rem;">
      {tags.map(t => <span class="pill">{t}</span>)}
    </div>

    <div style="display:flex; flex-wrap:wrap; gap:.75rem; margin-top:.25rem;">
      {actions.map(a => (
        <a class={`btn ${a.primary ? "primary" : ""}`} href={a.href} target={a.external ? "_blank" : undefined} rel={a.external ? "noopener" : undefined}>
          {a.label}
        </a>
      ))}
    </div>
  </div>
</section>
